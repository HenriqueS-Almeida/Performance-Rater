package model;

import java.util.LinkedList;
import java.util.List;

public class Materia {
	
	private String nome;
	private String u_nome;
	private List<Double> notas = new LinkedList<Double>();
	private Double mediaAnual = 6.0;
	
	public Materia() {
	}
	
	public Materia(String nome, String u_nome, List<Double> notas, Double mediaAnual) {
		super();
		this.nome = nome;
		this.u_nome = u_nome;
		this.notas = notas;
		this.mediaAnual = mediaAnual;
	}


	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getU_nome() {
		return u_nome;
	}

	public void setU_nome(String u_nome) {
		this.u_nome = u_nome;
	}

	public Double getMediaBimestral(int bim) {
		return notas.get(bim-1);
	}
	
	public Double getMediaAnual() {
		return this.mediaAnual;
	}
	
	public void setMediaAnual(Double mediaAnual) {
		this.mediaAnual=mediaAnual;
	}
	
	public void alterarNota(int bim, double nota){
		this.notas.set(bim-1, nota);
	}
	
	public Double calcularMedia() {
		Double media = 0.0;
		int cont = 0;
		for(int i = 0;i<=3;i++) {
			if(notas.get(i)!= null) {
			media += notas.get(i);
			cont++;
			}
		}
		if(cont!=0) {
		media = media/cont; 
		return media;
		}else 
			return 0.0;
	}
	
	public Double calcularAprovacao() {
		Double media = 0.0;
		Double mediaA = 0.0;
		int cont = 0;
		if(calcularMedia()<mediaAnual) {
			media = mediaAnual-calcularMedia();
			return media;
		}else {
			for(int i = 0;i<=3;i++) {
				if(notas.get(i)!=null) {
				media =+ notas.get(i);
				if(i>0)
				mediaA+=mediaA;
				cont++;
				}
			}
			if(cont!=0) {
			media = media-mediaA; 
			return media;
			}else
			
			return media=0.0;
		}
	}
}
